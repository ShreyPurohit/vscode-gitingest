{
  "name": "vscode-gitingest",
  "displayName": "vscode-gitingest",
  "description": "Quickly open GitHub repositories in GitIngest.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "icon": "/assets/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gitingest.openInGitIngest",
        "title": "Open in GitIngest"
      }
    ]
  },
  "keywords": [
    "git",
    "github",
    "gitingest",
    "repository",
    "code-review",
    "source-code"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShreyPurohit/vscode-gitingest"
  },
  "bugs": {
    "url": "https://github.com/ShreyPurohit/vscode-gitingest/issues"
  },
  "homepage": "https://github.com/ShreyPurohit/vscode-gitingest#readme",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.3"
  }
}